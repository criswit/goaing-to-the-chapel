{
  "name": "wedding-website-cdk",
  "version": "0.1.0",
  "bin": {
    "wedding-website-cdk": "bin/wedding-website-cdk.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "add-guests": "ts-node bin/add-guests.ts",
    "create-admin": "ts-node bin/create-admin.ts",
    "format:fix": "prettier --write \"lib/**/*.{ts,tsx,js,jsx,json,css,md}\" \"test/**/*.{ts,tsx,js,jsx,json,css,md}\" \"bin/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"lib/**/*.{ts,tsx,js,jsx,json,css,md}\" \"test/**/*.{ts,tsx,js,jsx,json,css,md}\" \"bin/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "init:jwt-keys": "node scripts/init-jwt-keys.js production",
    "rotate:jwt-keys": "./scripts/rotate-jwt-keys.sh production",
    "rotate:jwt-keys:force": "node scripts/init-jwt-keys.js production --force",
    "deploy:backend": "npm run build && npx cdk deploy RsvpBackendStack --profile wedding-website",
    "deploy:first-time": "npm run init:jwt-keys && npm run deploy:backend"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "aws-cdk": "2.1027.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.42.0"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.654.0",
    "@aws-sdk/client-ses": "^3.883.0",
    "@aws-sdk/client-sqs": "^3.883.0",
    "@aws-sdk/client-ssm": "^3.883.0",
    "@aws-sdk/lib-dynamodb": "^3.883.0",
    "@aws-sdk/util-dynamodb": "^3.654.0",
    "@types/aws-lambda": "^8.10.145",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "aws-cdk-lib": "2.211.0",
    "bcryptjs": "^2.4.3",
    "constructs": "^10.0.0",
    "csv-parse": "^6.1.0",
    "esbuild": "^0.19.0",
    "jsonwebtoken": "^9.0.2",
    "zod": "^4.1.5"
  }
}
